{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-table.directive"
    ],

    "actions": {
        "doArrangeEvent" : {
            "actionType": "JSFunctionAsync",
            "method": "arrangeColumns",
            "inputData": {
                "declViewModel": "{{data}}",
                "eventData": "{{data.eventData}}"
            },
            "deps": "js/columnArrangeService"
        },
        "resetColumnConfig" : {
            "actionType": "TcSoaService",
            "serviceName": "Internal-AWS2-2017-06-UiConfig",
            "method": "getOrResetUIColumnConfigs2",
            "inputData": {
                "getOrResetUiConfigsIn": [{
                    "scope": "LoginUser",
                    "scopeName": "",
                    "clientName": "AWClient",
                    "resetColumnConfig": true,
                    "columnConfigQueryInfos":
                        [{
                            "clientScopeURI": "Awp0SearchResults",
                            "operationType": "configured",
                            "typeNames": ["WorkspaceObject"],
                            "columnsToExclude": []
                        }],
                    "businessObjects": [{}]
                }]
            },
            "outputData": {
                "dataProviders.gridDataProvider.resetColumnConfigs": "columnConfigurations"
            }
        },
        "doGridDataProvider": {
            "actionType": "dataProvider",
            "method": "gridDataProvider"
        },
        "saveColumnConfigLoadData": {
            "actionType": "TcSoaService",
            "serviceName": "Internal-AWS2-2017-12-Finder",
            "method": "performSearchViewModel2",
            "inputData": {
                "columnConfigInput": {
                    "clientName": "AWClient",
                    "operationType": "as_arranged",
                    "clientScopeURI": "Awp0SearchResults"
                },
                "saveColumnConfigData": {
                    "clientScopeURI" : "Awp0SearchResults",
                    "columnConfigId" : "{{data.dataProviders.gridDataProvider.columnConfig.columnConfigId}}",
                    "columns": "{{data.dataProviders.gridDataProvider.newColumns}}",
                    "scope" : "LoginUser",
                    "scopeName": ""
                },
                "searchInput": {
                    "attributesToInflate": [ "object_name", "checked_out_user", "object_desc", "release_status_list", "fnd0InProcess" ],
                    "maxToLoad": 50,
                    "maxToReturn": 50,
                    "providerName": "Awp0FullTextSearchProvider",
                    "searchCriteria": {
                        "searchString": "*"
                    },
                    "searchFilterFieldSortType": "{{ctx.search.sortType}}",
                    "searchSortCriteria": "{{data.columnProviders.clientScopeUI.sortCriteria}}"
                }
            },
            "outputData": {
                "totalFound": "totalFound",
                "searchResults": "{{json:searchResultsJSON}}",
                "dataProviders.gridDataProvider.columnConfig": "columnConfig",
                "ctx.search.totalFound": "totalFound",
                "ctx.search.totalLoaded": "totalLoaded"
            }
        },
        "loadData": {
            "actionType": "TcSoaService",
            "serviceName": "Internal-AWS2-2017-12-Finder",
            "method": "performSearchViewModel2",
            "inputData": {
                "columnConfigInput": {
                    "clientName": "AWClient",
                    "clientScopeURI": "Awp0SearchResults"
                },
                "searchInput": {
                    "attributesToInflate": [ "object_name", "checked_out_user", "object_desc", "release_status_list", "fnd0InProcess" ],
                    "maxToLoad": 50,
                    "maxToReturn": 50,
                    "providerName": "Awp0FullTextSearchProvider",
                    "searchCriteria": {
                        "searchString": "*"
                    },
                    "searchFilterFieldSortType": "Priority",
                    "searchFilterMap": "{{ctx.search.activeFilterMap}}",
                    "searchSortCriteria": "{{data.columnProviders.clientScopeUI.sortCriteria}}",
                    "startIndex": "{{data.dataProviders.gridDataProvider.startIndex}}"
                }
            },
            "policy": {
                "types": [{
                    "name": "BusinessObject",
                    "properties": [{
                            "name": "object_string",
                            "count": 0
                        },

                        {
                            "name": "object_name",
                            "count": 0
                        },

                        {
                            "name": "object_desc",
                            "count": 0
                        },

                        {
                            "name": "release_status_list",
                            "count": 0
                        },

                        {
                            "name": "item_id",
                            "count": 0
                        },

                        {
                            "name": "item_revision_id",
                            "count": 0
                        },

                        {
                            "name": "last_mod_date",
                            "count": 0
                        },

                        {
                            "name": "creation_date",
                            "count": 0
                        },

                        {
                            "name": "owning_user",
                            "count": 0
                        }, {
                            "name": "awp0CellProperties"
                        }
                    ]
                }]
            },
            "outputData": {
                "totalFound": "totalFound",
                "searchResults": "{{json:searchResultsJSON}}",
                "dataProviders.gridDataProvider.columnConfig": "columnConfig",
                "ctx.search.totalFound": "totalFound",
                "ctx.search.totalLoaded": "totalLoaded",
                "ctx.search.filterMap": "searchFilterMap",
                "ctx.search.filterCategories": "searchFilterCategories",
                "ctx.search.objectsGroupedByProperty": "objectsGroupedByProperty"
            }
        }
    },

    "columnProviders": {
        "clientScopeUI": {
            "saveColumnAndLoadAction" : "saveColumnConfigLoadData",
            "resetColumnAction" : "resetColumnConfig",
            "sortCriteria": []
        }
    },

    "dataProviders": {
        "gridDataProvider": {
            "action": "loadData",
            "editContext": "TABLE_CONTEXT",
            "response": "{{data.searchResults}}",
            "totalFound": "{{data.totalFound}}",
            "selectionModelMode": "multiple",
            "inputData": {
                "selectionModel": "{{subPanelContext.selectionModel}}"
            },
            "commandsAnchor": "com.siemens.splm.clientfx.tcui.commands.modelObjectObjectNavigationCellListActionCommands"
        }
    },

    "grids": {
        "gridView": {
            "dataProvider": "gridDataProvider",
            "columnProvider": "clientScopeUI",
            "enableArrangeMenu": true,
            "gridOptions": {
                "enableGridMenu": true
            }
        }
    },

    "onEvent": [{
        "eventId": "columnArrange",
        "cacheEventData": true,
        "action": "doArrangeEvent"
    }]
}
